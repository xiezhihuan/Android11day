<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/day04_4_item_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/roll_img1" />

    <TextView
        android:id="@+id/day04_4_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/day04_4_item_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="对方水电费的说法是达到减肥就开始对方会计师电话费会计师"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/day04_4_item_descr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/day04_4_item_icon"
        android:layout_below="@+id/day04_4_item_title"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="对方水电费的说法是达到减肥就开始对方会计师电话费会计师"
        android:textColor="@color/colorGray"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/day04_4_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="专题"
        android:textColor="@color/colorRed"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/day04_4_item_icon"
        android:layout_marginRight="5dp"
        />
</RelativeLayout>